<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/format">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Threat Level"
        android:textColor="@color/customDialogTitleColor"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        tools:ignore="HardcodedText" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:outlineAmbientShadowColor="@color/customDialogTitleColor"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/customDialogTitleColor"
            android:outlineAmbientShadowColor="@color/customDialogTitleColor"
            android:text="Emergency Situation"
            android:textSize="12sp"
            android:textColor="@color/customDialogTitleColor"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/radioASAP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/customDialogTitleColor"
            android:outlineSpotShadowColor="@color/customDialogTitleColor"
            android:text="Need Help ASAP"
            android:textSize="12sp"
            android:textColor="@color/customDialogTitleColor"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        <!-- Add more radio buttons as needed -->

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/customDialogButtonColor"
            android:textColor="@color/customDialogButtonTextColor"
            tools:ignore="HardcodedText"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/customDialogButtonColor"
            android:textColor="@color/customDialogButtonTextColor"
            tools:ignore="HardcodedText"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>


</LinearLayout>
